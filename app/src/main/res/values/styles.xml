<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menuBarAbajo</item>
        <item name="colorPrimaryDark">@color/menuBarAbajo</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/menuColorTexto</item>
        <item name="android:itemBackground">@color/menuback</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="listMenuViewStyle">@style/PopupMenu</item>
    </style>


    <style name="PopupMenu" parent="Theme.AppCompat.DayNight.DarkActionBar">
