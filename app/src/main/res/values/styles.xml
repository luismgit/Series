<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menuBarAbajo</item>
        <item name="colorPrimaryDark">@color/menuBarAbajo</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/menuColorTexto</item>
        <item name="android:itemBackground">@color/menuback</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name = "Mytheme" parent = "AppTheme">
        <item name = "colorAccent">@color/blanco</item>
        <item name = "android:itemBackground">@color/menuback</item>
        <item name = "android:textColor">@color/menuColorTexto </item>
        <item name="android:textColorSecondary">@color/menuback</item>
        <item name="colorPrimary">@color/menuBarAbajo</item>
        <item name="colorPrimaryDark">@color/menuBarAbajo</item>
    </style>




</resources>
