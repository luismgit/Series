<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menuBarAbajo</item>
        <item name="colorPrimaryDark">@color/menuBarAbajo</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/menuColorTexto</item>
        <item name="android:itemBackground">@color/menuback</item>
        <item name="android:statusBarColor">@color/menuBarArriba</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="listPopupWindowStyle">@style/PopupMenu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <item name="listMenuViewStyle">@style/PopupMenu</item>

    </style>



    <style name="PopupMenu" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>



    <style name="ThemeOverlay.MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/menuback</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#67000000</item>
        <item name="sv_showcaseColor">#04c5f5</item>
        <item name="sv_buttonText">SIGUIENTE</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#67000000</item>
        <item name="sv_showcaseColor">#04c5f5</item>
        <item name="sv_buttonText">OMITIR</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>
    <style name="CustomShowcaseTheme4" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#67000000</item>
        <item name="sv_showcaseColor">#04c5f5</item>
        <item name="sv_buttonText">FINALIZAR</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#04c5f5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListItemBigtext">
        <item name="android:textColor">#04c5f5</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemSubtext">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>

    </style>






</resources>
