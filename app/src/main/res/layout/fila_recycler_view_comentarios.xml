<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:layout_marginTop="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/avatarComentario"

        />
    <TextView
        android:id="@+id/text_message_name"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/avatarComentario"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fechaComentario"
        app:layout_constraintLeft_toRightOf="@+id/text_message_name"
        android:text="hola"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        />

    <com.like.LikeButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:icon_size="20dp"
        app:icon_type="thumb"
        app:layout_constraintTop_toBottomOf="@+id/text_message_name"
        app:layout_constraintLeft_toRightOf="@id/avatarComentario"
        android:id="@+id/botonMegusta"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        />


    <TextView
        android:id="@+id/editTextComentario"
        android:text="hi man, how are you?"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/text_message_name"
        app:layout_constraintLeft_toRightOf="@+id/botonMegusta"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_gusta"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/avatarComentario"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textoMeGusta"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/avatarComentario"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toRightOf="@id/textoMeGusta"
        android:textStyle="bold"
        android:id="@+id/numeroMegusta"/>







</android.support.constraint.ConstraintLayout>