<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.series.actividades.Perfil"
    android:background="@drawable/degradado_registro"
    android:padding="25dp">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/fotoPerfil"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:src="@drawable/series_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/fotoPerfil"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/textoEmail"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textoEmail"
            android:layout_marginRight="15dp"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextEmail"
            android:layout_marginTop="25dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modificar"
            android:background="@drawable/degradado_boton"
            android:id="@+id/botonModificar"
            android:textColor="#bab7b7"
            android:textSize="17sp"
            android:layout_below="@id/editTextEmail"
            android:layout_marginTop="80dp"/>





</RelativeLayout>
