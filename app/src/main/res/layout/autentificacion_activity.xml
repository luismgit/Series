<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.series.actividades.AutentificacionActivity"
    android:orientation="vertical"
    android:background="@drawable/degradado_autentificacion"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifica tu número de teléfono"
            android:textSize="23dp"
            android:textColor="#0b0b0b"
            android:textStyle="bold"
            android:paddingBottom="7dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="#050505"
        android:textSize="17dp"
        android:text="Series enviará un único mensaje SMS para verificar tu número de telefono."
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:paddingBottom="10dp"
        android:textColor="#050505"
        android:textSize="17dp"
        android:text="Introduzca su número de teléfono y pulse OK."
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="40dp">

        <EditText
            android:id="@+id/etxtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="número de teléfono"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#050505"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:onClick="requestCode"
            android:id="@+id/botonSMS"
            android:layout_marginTop="5dp"
            android:background="@drawable/degradado_boton"
            android:layout_marginLeft="10dp"
            android:textColor="#bab7b7"
            android:textSize="17sp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#050505"
        android:textSize="17dp"
        android:paddingHorizontal="20dp"
        android:text="En caso de que el SMS no se verifique automaticamente introduzca el código recibido y pulse ENVIAR"
        android:paddingVertical="7dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="70dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="código recibido"
        android:inputType="number"
        android:id="@+id/etxtPhoneCode"
        android:textStyle="bold"
        android:textColor="#050505"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGIN"
        android:onClick="signIn"
        android:id="@+id/botonSIGIN"
        android:layout_marginLeft="35dp"
        android:background="@drawable/degradado_boton"
        android:textColor="#bab7b7"
        android:textSize="17sp"
        />
    </LinearLayout>

    <ProgressBar
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:id="@+id/progressBarCircular"
        android:indeterminate="false"
        android:max="100"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En caso de problemas en el registro pulse aquí"
        android:textColor="#000000"
        android:textSize="17dp"
        android:paddingHorizontal="16dp"

        />




</LinearLayout>
