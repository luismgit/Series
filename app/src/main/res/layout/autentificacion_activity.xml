<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.series.actividades.AutentificacionActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/etxtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="telefono"
        android:inputType="phone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND ME AN SMS"
        android:onClick="requestCode"
        android:id="@+id/botonSMS"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type your received code"
        android:inputType="number"
        android:id="@+id/etxtPhoneCode"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGIN"
        android:onClick="signIn"
        android:id="@+id/botonSIGIN"
        />
    
    <ProgressBar
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:id="@+id/progressBarCircular"
        android:indeterminate="false"
        android:max="100"
        />




</LinearLayout>
