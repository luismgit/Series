<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"


    >


 <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/imagenSerieContactosInfo"
     android:layout_width="100dp"
     android:layout_height="100dp"

     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true"
     android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/nombreSerieFavoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imagenSerieContactosInfo"
        android:layout_toRightOf="@+id/imagenSerieContactosInfo"
        android:text="Breaking Bad"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/negro"/>

   <ProgressBar
       android:id="@+id/progressBarNota"
       style="?android:attr/progressBarStyleHorizontal"
       android:layout_width="105dp"
       android:layout_height="105dp"
        android:layout_centerInParent="true"
       android:indeterminate="false"
       android:max="5"
       android:progressDrawable="@drawable/circular_progress_bar"
       android:paddingTop="@dimen/_20sdp"/>

   <TextView
       android:id="@+id/textViewNota"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:shadowColor="#d6d5d4"
       android:shadowDx="3"
       android:shadowDy="2"
       android:shadowRadius="1.8"
       android:text="8.5"
       android:layout_centerInParent="true"
       android:textColor="#000000"
       android:textSize="25sp"
       android:textStyle="bold"
       android:paddingTop="@dimen/_20sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d4d4d4"
        android:id="@+id/textView" />



    <ImageView
        android:id="@+id/filmaffinityImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/logo_tmdb"
        />



</RelativeLayout>