<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"


    >


 <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/imagenSerieContactosInfo"
     android:layout_width="100dp"
     android:layout_height="100dp"

     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true"
     android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/nombreSerieFavoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imagenSerieContactosInfo"
        android:layout_toRightOf="@+id/imagenSerieContactosInfo"
        android:text="Breaking Bad"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarNota"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_below="@+id/nombreSerieFavoritos"
        android:layout_toRightOf="@id/imagenSerieContactosInfo"
        android:indeterminate="false"
        android:max="5"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d4d4d4"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/textViewNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagenSerieContactosInfo"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="67dp"
        android:shadowColor="#d6d5d4"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:text="8.5"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/filmaffinityImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/film" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/filmaffinityImage"
        android:layout_alignBaseline="@id/textViewNota"
        android:layout_marginRight="10dp"
        android:text="Ir a"
        android:textColor="#39517b"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>