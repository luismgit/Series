<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/imagenSerieContactosInfo"
        android:src="@drawable/breaking"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreSerieFavoritos"
        android:text="Breaking Bad"
        android:layout_toRightOf="@id/imagenSerieContactosInfo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/progressBarNota"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:indeterminate="false"
        android:max="5"
        android:progressDrawable="@drawable/circular_progress_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d4d4d4"
        />

    <TextView
        android:id="@+id/textViewNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBarNota"
        android:layout_alignStart="@+id/progressBarNota"
        android:layout_centerVertical="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:text="8.5"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:shadowColor="#d6d5d4"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"/>
</RelativeLayout>