<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:layout_marginRight="15dp"
    >


    <TextView
        android:id="@+id/editTextComentario"
        android:text="hello, hello!"
        android:background="@drawable/rounded_rectangle_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/editTextComentario"
        android:layout_marginRight="10dp"
        android:paddingTop="0dp"
        android:id="@+id/numerodeMegusta"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_gusta"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/numerodeMegusta"
        android:paddingTop="0dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tMegusta"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fechaComentarioUsu"
        android:text="hola"
        android:textSize="12sp"
        android:textColor="#000000"
        app:layout_constraintRight_toLeftOf="@id/editTextComentario"
        app:layout_constraintTop_toBottomOf="@id/tMegusta"
        android:layout_marginRight="12dp"

        />



</android.support.constraint.ConstraintLayout>